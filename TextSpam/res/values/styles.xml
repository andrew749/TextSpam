<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/actionbarcustom</item>
    </style>

    <style name="actionbarcustom" parent="Base.Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/blue</item>
    </style>

    <style name="Theme.Transparent" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:color">#c8000000</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textSize">20dip</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>