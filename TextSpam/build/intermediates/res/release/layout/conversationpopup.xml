<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="50dip"
        android:background="@android:color/darker_gray"
        >

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/popuptext"
            android:id="@+id/popuptextview"
            android:paddingBottom="50dip"
            />

        <EditText
            android:id="@+id/popupedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/popuptextview"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/popupbutton"
            android:ems="10"
            android:hint="frequency"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/popupbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/popupedittext"
            android:text="Send" />

</RelativeLayout><!-- From: file:/home/andrew/Dropbox/workspace/AndroidStudioProjects/TextSpam/TextSpam/res/layout/conversationpopup.xml -->